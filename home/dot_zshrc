# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Antigen setup
if [[ ! -a $HOME/.antigen.zsh ]]; then
  sh "curl -L git.io/antigen > $HOME/.antigen.zsh"
fi
source $HOME/.antigen.zsh

# Antigen config
antigen use oh-my-zsh

antigen bundle git
antigen bundle npm
antigen bundle composer
antigen bundle sudo
antigen bundle docker
antigen bundle vi-mode
antigen bundle zsh-users/zsh-autosuggestions

antigen theme romkatv/powerlevel10k

antigen apply

# Aliases
alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"
alias spotify="LD_PRELOAD=/usr/local/lib/spotify-adblock.so spotify > /dev/null 2>&1 &;disown"
alias izi="sh ~/cloud/EVO/izi.sh &;disown"

# Functions
function launch {
  nohup $1 >/dev/null 2>/dev/null & disown; exit
}

# Powerlevel10k setup
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
